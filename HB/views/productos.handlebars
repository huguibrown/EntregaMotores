<h1> INGRESE PRODUCTO  </h1>
<div class="container">
        <div class="jumbotron">
            <h1 style="color:black;"> Ingresar productos</h1>
            <br>
            <form action="/lista" method="post">
                <div class="form-group">
                    <label for="">{{Nombre:}}</label>
                    <input id="nombre" class="form-control" type="text" name="nombre">
                </div>
                <div class="form-group">
                    <label for="">{{Precio:}}</label>
                    <input id="precio" class="form-control" type="number" name="precio">         
                </div>
                <div class="form-group">
                    <label for="">{{Foto:}}</label>
                    <input id="foto" class="form-control" type="url" name="foto">
                </div>
                <button class="btn btn-success mt-3 mb-5" > <a href="./layouts/lista.handlebars">Enviar</a></button>
                <if(productos.length> 0)> { 
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color:  yellow;"> <th>Nombre:</th><th>Precio:</th><th>Foto:</th></tr>
            <productos.forEach(function(producto) {>
            <tr>
                <td><producto.nombre></td>
                <td><producto.precio></td>
                <td><producto.foto></td>
            </tr>
            })
        </table>
    </div>
}else {
    <h3 class="alert alert-danger"> no se encontraron datos</h3>
}
            </form>
            

        </div>
    </div>